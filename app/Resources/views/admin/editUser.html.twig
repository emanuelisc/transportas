{% extends 'base.html.twig' %}

{% block title %}TR Users{% endblock %}

{% block logout %}
    <div class="col-md-2">
        <div class="navbar navbar-inverse" role="banner">
            <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('logout') }}">Logout</a></li>
                    >
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}

{% block navigation %}
    <div class="col-md-2">
        <div class="sidebar content-box" style="display: block;">
            <ul class="nav">
                <!-- Main menu -->
                <li class=""><a href="{{ path('admin') }}"><i class="glyphicon glyphicon-home"></i> Dashboard</a></li>
                <li><a href="{{ path('reports') }}"><i class="glyphicon glyphicon-stats"></i> Report</a></li>
                <li class="submenu">
                    <a href="#">
                        <i class="glyphicon glyphicon-link"></i> Vehicles
                        <span class="caret pull-right"></span>
                    </a>
                    <!-- Sub menu -->
                    <ul style="display: none;">
                        <li><a href="{{ path('vehicles') }}">Vehicle list</a></li>
                        <li><a href="{{ path('vehicle_create') }}">Create new</a></li>
                    </ul>
                </li>
                <li class="submenu open">
                    <a href="#">
                        <i class="glyphicon glyphicon-user"></i> Users
                        <span class="caret pull-right"></span>
                    </a>
                    <!-- Sub menu -->
                    <ul style="display: block;">
                        <li><a href="{{ path('users') }}">User list</a></li>
                        <li class="current"><a href="{{ path('user_create') }}">Create new</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="col-md-10">
        <div class="row">

            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">User info</div>
                </div>
                <div class="panel-body">
                    <div class="col-md-6">

                        <div class="box">
                            <div class="content-wrap">
                                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                                {{ form_row(form.name, {'attr': { 'placeholder': 'Full name'}}) }}
                                {{ form_row(form.email, {'attr': { 'placeholder': 'Email'}}) }}
                                {{ form_row(form.plainPassword, {'attr': {'placeholder': 'Password'}}) }}
                                {{ form_row(form.role, {'attr': {'placeholder': 'Role'}}) }}
                                <div class="action">
                                    <button type="submit" class="btn btn-primary btn-block btn-flat">Edit user
                                    </button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer>
        <div class="container">

            <div class="copy text-center">
                Copyright 2018 <a href='#'>Website</a>
            </div>

        </div>
    </footer>
{% endblock %}

{% block scripts %}
    <script>
        $(function () {
            $(".showpassword").each(function (index, input) {
                var $input = $(input);
                $('<label class="showpasswordlabel"/>').append(
                    $("<input type='checkbox' class='showpasswordcheckbox' />").click(function () {
                        var change = $(this).is(":checked") ? "text" : "password";
                        var rep = $("<input type='" + change + "' />")
                            .attr("id", $input.attr("id"))
                            .attr("name", $input.attr("name"))
                            .attr('class', $input.attr('class'))
                            .val($input.val())
                            .insertBefore($input);
                        $input.remove();
                        $input = rep;
                    })
                ).append($("<span/>").text("Show password")).insertAfter($input);
            });
        });
    </script>
{% endblock %}


