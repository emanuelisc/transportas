{% extends 'base.html.twig' %}

{% block title %}TR Report{% endblock %}

{% block logout %}
    <div class="col-md-2">
        <div class="navbar navbar-inverse" role="banner">
            <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('logout') }}">Logout</a></li>>
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}

{% block navigation %}
    <div class="col-md-2">
        <div class="sidebar content-box" style="display: block;">
            <ul class="nav">
                <!-- Main menu -->
                <li><a href="{{ path('admin') }}"><i class="glyphicon glyphicon-home"></i> Dashboard</a></li>
                <li class="current"><a href="{{ path('reports') }}"><i class="glyphicon glyphicon-stats"></i> Report</a></li>
                <li class="submenu">
                    <a href="#">
                        <i class="glyphicon glyphicon-link"></i> Vehicles
                        <span class="caret pull-right"></span>
                    </a>
                    <!-- Sub menu -->
                    <ul style="display: none;">
                        <li><a href="{{ path('vehicles') }}">Vehicle list</a></li>
                        <li><a href="{{ path('vehicle_create') }}">Create new</a></li>
                    </ul>
                </li>
                <li class="submenu">
                    <a href="#">
                        <i class="glyphicon glyphicon-user"></i> Users
                        <span class="caret pull-right"></span>
                    </a>
                    <!-- Sub menu -->
                    <ul style="display: none;">
                        <li><a href="{{ path('users') }}">User list</a></li>
                        <li><a href="{{ path('user_create') }}">Create new</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="col-md-10">
        <div class="row">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Select user and month</div>
                </div>
                <div class="panel-body">
                    <div class="col-md-10">
                        <div class="box">
                            <div class="content-wrap">
                                {{ form_start(form) }}
                                <label>User</label>
                                <select id="user" name="user" class="form-control", style="margin-bottom:15px">
                                    {% for user in users %}
                                    <option value="{{ user.id }}">{{ user.name }}</option>
                                    {% endfor %}
                                </select>
                                {{ form_widget(form) }}
                                    <div class="action">
                                        <button onclick="test()" type="submit" class="btn btn-primary btn-block btn-flat">Submit</button>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer>
        <div class="container">

            <div class="copy text-center">
                Copyright 2018 <a href='#'>Website</a>
            </div>

        </div>
    </footer>
{% endblock %}

{% block scripts %}
    <script>  //Niekaip neistraukiu reiksmes is entity type
        function test() {
            var x = document.getElementById('report_form_user');
            var y = document.getElementById('user');
            var strUser = y.options[y.selectedIndex].value;

            x.value = strUser;
        }
    </script>
{% endblock %}


