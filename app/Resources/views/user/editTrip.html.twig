{% extends 'base.html.twig' %}

{% block title %}TR Users{% endblock %}

{% block logout %}
    <div class="col-md-2">
        <div class="navbar navbar-inverse" role="banner">
            <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('logout') }}">Logout</a></li>
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}

{% block navigation %}
    <div class="col-md-2">
        <div class="sidebar content-box" style="display: block;">
            <ul class="nav">
                <!-- Main menu -->
                <li><a href="{{ path('user') }}"><i class="glyphicon glyphicon-home"></i> Dashboard</a></li>
                <li class="current"><a href="{{ path('vehicle_select') }}"><i class="glyphicon glyphicon-stats"></i> Add trip</a></li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="col-md-10">
        <div class="row">

            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Add report</div>
                </div>
                <div class="panel-body">
                    <div class="col-md-10">
                        <div class="box">
                            <div class="content-wrap">
                                {{ form_start(form) }}
                                <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.date) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.route) }}
                                </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(form.depart_km) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(form.depart_time) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(form.arrive_time) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(form.unload_time) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(form.depart2_time) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(form.arrive2_time) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(form.arrive_km) }}
                                    </div>
                                </div>
                                {{ form_widget(form) }}
                                <div class="action">
                                    <button type="submit" class="btn btn-primary btn-block btn-flat">Add report
                                    </button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer>
        <div class="container">

            <div class="copy text-center">
                Copyright 2018 <a href='#'>Website</a>
            </div>

        </div>
    </footer>
{% endblock %}

{% block scripts %}

{% endblock %}


